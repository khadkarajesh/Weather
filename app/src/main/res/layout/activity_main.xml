<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>


    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#cc55ACEF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dashboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bottom_menu_selector"
                android:clickable="true"
                android:onClick="clickHandle"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <com.ekbana.weather.weather.common.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="a"
                    android:textColor="@color/bottomMenuIcon"
                    android:textSize="@dimen/customFontImage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dashboard"
                    android:textColor="@color/bottomMenuIcon" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="#a8a8a8"></View>

            <LinearLayout
                android:id="@+id/weather"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bottom_menu_selector"
                android:clickable="true"
                android:onClick="clickHandle"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <com.ekbana.weather.weather.common.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="b"
                    android:textColor="@color/bottomMenuIcon"
                    android:textSize="@dimen/customFontImage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Weather"
                    android:textColor="@color/bottomMenuIcon" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="#a8a8a8"></View>

            <LinearLayout
                android:id="@+id/tweet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bottom_menu_selector"
                android:clickable="true"
                android:onClick="clickHandle"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <com.ekbana.weather.weather.common.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="c"
                    android:textColor="@color/bottomMenuIcon"
                    android:textSize="@dimen/customFontImage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tweet"
                    android:textColor="@color/bottomMenuIcon" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="#a8a8a8"></View>

            <LinearLayout
                android:id="@+id/pinned"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bottom_menu_selector"
                android:clickable="true"
                android:onClick="clickHandle"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <com.ekbana.weather.weather.common.FontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="d"
                    android:textColor="@color/bottomMenuIcon"
                    android:textSize="@dimen/customFontImage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pinned"
                    android:textColor="@color/bottomMenuIcon" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
