<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/UserImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@drawable/danfe" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="RED WEBSITE DESIGN"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tweetedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testUser" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tweetContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:autoLink="web"
                    android:textColorLink="#9f0000ff"
                    android:text="@string/dummyText" />

                <TextView
                    android:id="@+id/tweetTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="21 min ago" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cfcfcf"></View>

    <LinearLayout
        android:id="@+id/secondTweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/UserImageOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/userNameOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="RED WEBSITE DESIGN"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tweetedAtOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testUser" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tweetContentOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:textColorLink="#9f0000ff"
                    android:layout_marginBottom="4dp"
                    android:text="@string/dummyText" />

                <TextView
                    android:id="@+id/tweetTimeOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="21 min ago" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
